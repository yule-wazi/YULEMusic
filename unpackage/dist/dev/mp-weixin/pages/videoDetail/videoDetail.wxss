.video {
  width: 100%;
}
.info {
  padding: 30rpx;
}
.info .title {
  font-size: 50rpx;
  font-weight: 700;
}
.info .author {
  margin-top: 10rpx;
  font-size: 35rpx;
  color: #666;
}
.info .other {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #666;
}
.info .singerList .artists {
  font-size: 40rpx;
  font-weight: 400;
  margin: 20rpx 0;
  color: #666;
}
.info .singerList .list {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-right: 40rpx;
  flex-wrap: wrap;
  justify-content: flex-start;
  width: 100%;
}
.info .singerList .singer {
  width: 20%;
  margin-right: 35rpx;
  display: flex;
  flex-direction: column;
}
.info .singerList .singer .Img {
  width: 100rpx;
  height: 100rpx;
  margin: 0rpx auto;
  border-radius: 50rpx;
  overflow: hidden;
}
.info .singerList .singer .Imgimage {
  width: 100%;
  height: 100%;
}
.info .singerList .singer .name {
  font-size: 25rpx;
  text-align: center;
  margin-top: 10rpx;
}