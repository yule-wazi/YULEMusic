.playerBar {
  position: fixed;
  bottom: 0rpx;
  left: 0;
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 1rpx solid #666;
}
@keyframes rotateImg {
0% {
    transform: rotate(0deg);
}
100% {
    transform: rotate(360deg);
}
}
.playerBar .album {
  position: absolute;
  bottom: 0;
  border: 25rpx solid #020203;
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  box-sizing: border-box;
  overflow: hidden;
  animation: rotateImg 20s linear infinite;
  animation-play-state: paused;
}
.playerBar .album .albumImg {
  height: 100%;
  width: 100%;
  object-fit: cover;
}
.playerBar .album.playing {
  animation-play-state: running;
}
.playerBar .songInfo {
  font-size: 50rpx;
  line-height: 130rpx;
  width: 45%;
  white-space: nowrap;
  overflow: hidden;
  padding: 0 20rpx;
  margin-left: 150rpx;
  font-weight: 700;
  color: #262738;
  box-sizing: border-box;
}
.playerBar .controls {
  position: absolute;
  right: 60rpx;
  display: flex;
  align-items: center;
}
.playerBar .controls .pause {
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
}
.playerBar .controls .list {
  width: 60rpx;
  height: 60rpx;
}